                    <div class="article-meta-header" style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1.5rem; flex-wrap: wrap;">
                        <span class="article-category-badge" 
                              style="padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600;
                                     background: <%= article.category === 'treinamento' ? '#e3f2fd' : 
                                                  article.category === 'nutricao' ? '#e8f5e8' : 
                                                  article.category === 'saude' ? '#ffebee' : 
                                                  article.category === 'motivacao' ? '#fff3e0' : '#f8f9fa' %>;
                                     color: <%= article.category === 'treinamento' ? '#1565c0' : 
                                             article.category === 'nutricao' ? '#2e7d32' : 
                                             article.category === 'saude' ? '#c62828' : 
                                             article.category === 'motivacao' ? '#ef6c00' : '#6c757d' %>;">
