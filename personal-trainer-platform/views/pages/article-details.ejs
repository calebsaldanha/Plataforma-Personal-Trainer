    <main class="main-content">
        <div class="container" style="padding-top: 120px;">
            <div class="article-detail-page">
                <!-- Cabe√ßalho do Artigo -->
                <div class="article-header" style="margin-bottom: 3rem; padding-bottom: 2rem; border-bottom: 2px solid #e9ecef;">
                    <nav class="article-breadcrumb" style="display: flex; align-items: center; gap: 0.5rem; margin-bottom: 1rem; font-size: 0.9rem; color: #6c757d;">
                        <a href="/articles" style="color: #4361ee; text-decoration: none;">Artigos</a>
                        <% if (article.category) { %>
                            <span>/</span>
                            <a href="/articles/category/<%= article.category %>" style="color: #4361ee; text-decoration: none;">
                                <%= article.category === 'treinamento' ? 'Treinamento' :
