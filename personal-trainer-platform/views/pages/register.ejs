<%- include('../partials/header', { 
    title: 'Cadastro - FitConnect',
    bodyClass: 'auth-body'
}) %>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>Crie sua conta</h2>
            <p>Junte-se à nossa comunidade fitness</p>
        </div>

        <% if (error) { %>
            <div class="alert alert-error">
                <%= error %>
            </div>
        <% } %>

        <form class="auth-form" method="POST" action="/auth/register">
            <div class="form-group">
                <label for="name">Nome completo</label>
                <input type="text" id="name" name="name" required>
            </div>

            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="form-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" required minlength="6">
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirmar senha</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required>
            </div>

            <div class="form-group">
                <label>Tipo de conta</label>
                <div class="radio-group">
                    <label class="radio-label">
                        <input type="radio" name="userType" value="client" checked>
                        <span>Cliente</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="userType" value="trainer">
                        <span>Personal Trainer</span>
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Criar conta</button>
        </form>

        <div class="auth-footer">
            <p>Já tem uma conta? <a href="/auth/login">Faça login</a></p>
            <p><a href="/">← Voltar para o site</a></p>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
