    <title><%= title || 'Artigos e Dicas - FitConnect' %></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/fixes.css">
    <link rel="stylesheet" href="/css/dashboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="home-page">
    <!-- Header -->
    <header class="header">
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-logo">
                    <h2>FitConnect</h2>
                </div>
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">In√≠cio</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#about" class="nav-link">Como Funciona</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#features" class="nav-link">Benef√≠cios</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#trainer" class="nav-link">Personal</a>
                    </li>
                    <li class="nav-item">
                        <a href="/articles" class="nav-link active">Artigos</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#contact" class="nav-link">Contato</a>
                    </li>
                    <% if (isAuthenticated) { %>
                        <li class="nav-item">
                            <span class="nav-link">Ol√°, <%= user.name %>!</span>
                        </li>
                        <li class="nav-item">
                            <form action="/auth/logout" method="POST" class="logout-form">
                                <button type="submit" class="nav-link login-btn">Sair</button>
                            </form>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a href="/auth/login" class="nav-link login-btn">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="/auth/register" class="nav-link register-btn">Cadastre-se</a>
                        </li>
                    <% } %>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </div>
        </nav>
    </header>

    <main class="main-content">
        <!-- Hero Section para Artigos -->
        <section class="hero" style="background: linear-gradient(135deg, #4361ee 0%, #7209b7 100%); padding: 100px 0 60px; margin-top: 0;">
            <div class="container">
                <div class="hero-content" style="text-align: center;">
                    <h1 class="hero-title" style="color: white; margin-bottom: 1rem;">Artigos & Dicas</h1>
                    <p class="hero-subtitle" style="color: white; opacity: 0.9; font-size: 1.2rem;">
                        Conte√∫do exclusivo para melhorar seu desempenho e conhecimento
                    </p>
                    
                    <% if (user && user.role === 'trainer') { %>
                        <div style="margin-top: 2rem;">
                            <a href="/articles/create" class="btn btn-primary">Criar Novo Artigo</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </section>

        <!-- Conte√∫do Principal -->
        <section class="articles-section" style="padding: 60px 0;">
            <div class="container">
                <!-- Filtros por Categoria -->
                <div class="articles-filters" style="margin-bottom: 3rem;">
                    <h3 style="text-align: center; margin-bottom: 1.5rem; color: #343a40;">Categorias</h3>
                    <div class="categories-list" style="display: flex; justify-content: center; flex-wrap: wrap; gap: 0.5rem;">
                        <a href="/articles" class="category-tag <%= !currentCategory ? 'active' : '' %>" 
                           style="padding: 0.5rem 1.5rem; background: <%= !currentCategory ? '#4361ee' : '#f8f9fa' %>; 
                                  color: <%= !currentCategory ? 'white' : '#6c757d' %>; text-decoration: none; 
                                  border-radius: 25px; font-size: 0.9rem; transition: all 0.3s ease; border: 2px solid #4361ee;">
                            Todos
                        </a>
                        <a href="/articles/category/treinamento" class="category-tag <%= currentCategory === 'treinamento' ? 'active' : '' %>"
                           style="padding: 0.5rem 1.5rem; background: <%= currentCategory === 'treinamento' ? '#4361ee' : '#f8f9fa' %>; 
                                  color: <%= currentCategory === 'treinamento' ? 'white' : '#6c757d' %>; text-decoration: none; 
                                  border-radius: 25px; font-size: 0.9rem; transition: all 0.3s ease; border: 2px solid #4361ee;">
                            üèãÔ∏è Treinamento
                        </a>
                        <a href="/articles/category/nutricao" class="category-tag <%= currentCategory === 'nutricao' ? 'active' : '' %>"
                           style="padding: 0.5rem 1.5rem; background: <%= currentCategory === 'nutricao' ? '#4361ee' : '#f8f9fa' %>; 
                                  color: <%= currentCategory === 'nutricao' ? 'white' : '#6c757d' %>; text-decoration: none; 
                                  border-radius: 25px; font-size: 0.9rem; transition: all 0.3s ease; border: 2px solid #4361ee;">
                            ü•ó Nutri√ß√£o
                        </a>
                        <a href="/articles/category/saude" class="category-tag <%= currentCategory === 'saude' ? 'active' : '' %>"
                           style="padding: 0.5rem 1.5rem; background: <%= currentCategory === 'saude' ? '#4361ee' : '#f8f9fa' %>; 
                                  color: <%= currentCategory === 'saude' ? 'white' : '#6c757d' %>; text-decoration: none; 
                                  border-radius: 25px; font-size: 0.9rem; transition: all 0.3s ease; border: 2px solid #4361ee;">
                            ‚ù§Ô∏è Sa√∫de
                        </a>
                        <a href="/articles/category/motivacao" class="category-tag <%= currentCategory === 'motivacao' ? 'active' : '' %>"
                           style="padding: 0.5rem 1.5rem; background: <%= currentCategory === 'motivacao' ? '#4361ee' : '#f8f9fa' %>; 
                                  color: <%= currentCategory === 'motivacao' ? 'white' : '#6c757d' %>; text-decoration: none; 
                                  border-radius: 25px; font-size: 0.9rem; transition: all 0.3s ease; border: 2px solid #4361ee;">
                            üí™ Motiva√ß√£o
                        </a>
                    </div>
                </div>

                <!-- Grid de Artigos -->
                <% if (articles && articles.length > 0) { %>
                    <div class="articles-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 2rem;">
                        <% articles.forEach(article => { %>
                            <article class="article-card" style="background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 6px rgba(0,0,0,0.1); transition: all 0.3s ease;">
                                <div class="article-image" style="height: 200px; background: linear-gradient(135deg, #4361ee 0%, #7209b7 100%); display: flex; align-items: flex-end; justify-content: flex-end; padding: 1rem; position: relative;">
                                    <div class="article-category" 
                                         style="background: rgba(255,255,255,0.9); color: #4361ee; padding: 0.5rem 1rem; border-radius: 20px; font-size: 0.8rem; font-weight: 600; display: flex; align-items: center; gap: 0.5rem;">
                                        <%= article.category ? 
                                            (article.category === 'treinamento' ? 'üèãÔ∏è' :
                                             article.category === 'nutricao' ? 'ü•ó' :
                                             article.category === 'saude' ? '‚ù§Ô∏è' :
                                             article.category === 'motivacao' ? 'üí™' : 'üìù') 
                                            : 'üìù' %>
                                        <%= article.category ? article.category.charAt(0).toUpperCase() + article.category.slice(1) : 'Geral' %>
                                    </div>
                                </div>
                                <div class="article-content" style="padding: 1.5rem;">
                                    <h3 style="margin: 0 0 1rem 0; color: #343a40; line-height: 1.4; font-size: 1.2rem;">
                                        <%= article.title %>
                                    </h3>
                                    <p class="article-excerpt" style="color: #6c757d; line-height: 1.6; margin-bottom: 1rem;">
                                        <%= article.content.length > 120 ? 
                                            article.content.substring(0, 120) + '...' : 
                                            article.content %>
                                    </p>
                                    <div class="article-meta" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem; font-size: 0.9rem; color: #6c757d;">
                                        <span class="article-author" style="font-weight: 600;">
                                            Por <%= article.author_name %>
                                        </span>
                                        <span class="article-date">
                                            <%= new Date(article.created_at).toLocaleDateString('pt-BR') %>
                                        </span>
                                    </div>
                                    <a href="/article/<%= article.id %>" class="article-link" 
                                       style="color: #4361ee; text-decoration: none; font-weight: 600; display: inline-flex; align-items: center; gap: 0.5rem;">
                                        Ler mais ‚Üí
                                    </a>
                                </div>
                            </article>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state" style="text-align: center; padding: 3rem 2rem; color: #6c757d;">
                        <div class="empty-icon" style="font-size: 4rem; margin-bottom: 1rem; opacity: 0.5;">üìù</div>
                        <h3 style="margin: 0 0 0.5rem 0; color: #6c757d;">Nenhum artigo encontrado</h3>
                        <p style="margin: 0 0 2rem 0;">
                            <%= currentCategory ? 
                                `N√£o h√° artigos na categoria "${currentCategory}" ainda.` : 
                                'Ainda n√£o h√° artigos publicados.' %>
                        </p>
                        <% if (user && user.role === 'trainer') { %>
                            <a href="/articles/create" class="btn btn-primary">Criar Primeiro Artigo</a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>FitConnect</h3>
                    <p>Transformando vidas atrav√©s do treinamento personalizado.</p>
                </div>
                <div class="footer-section">
                    <h4>Links R√°pidos</h4>
                    <ul>
                        <li><a href="/">In√≠cio</a></li>
                        <li><a href="/#about">Como Funciona</a></li>
                        <li><a href="/#features">Benef√≠cios</a></li>
                        <li><a href="/articles">Artigos</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Contato</h4>
                    <ul>
                        <li>contato@fitconnect.com</li>
                        <li>(11) 99999-9999</li>
                        <li>S√£o Paulo, SP</li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h4>Siga-nos</h4>
                    <div class="social-links">
                        <a href="#">üìò</a>
                        <a href="#">üì∑</a>
                        <a href="#">üê¶</a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 FitConnect. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
