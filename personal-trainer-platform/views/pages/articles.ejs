                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="/" class="nav-link">In√≠cio</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#about" class="nav-link">Como Funciona</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#features" class="nav-link">Benef√≠cios</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#trainer" class="nav-link">Personal</a>
                    </li>
                    <li class="nav-item">
                        <a href="/articles" class="nav-link">Artigos</a>
                    </li>
                    <li class="nav-item">
                        <a href="/#contact" class="nav-link">Contato</a>
                    </li>
                    <% if (isAuthenticated) { %>
                        <li class="nav-item">
                            <span class="nav-link">Ol√°, <%= user.name %>!</span>
                        </li>
                        <li class="nav-item">
                            <form action="/auth/logout" method="POST" class="logout-form">
                                <button type="submit" class="nav-link login-btn">Sair</button>
                            </form>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a href="/auth/login" class="nav-link login-btn">Login</a>
                        </li>
                        <li class="nav-item">
                            <a href="/auth/register" class="nav-link register-btn">Cadastre-se</a>
                        </li>
                    <% } %>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
