<%- include('../partials/header', { 
    title: 'Formulário Inicial - FitConnect',
    bodyClass: 'dashboard-body'
}) %>

<header class="dashboard-header">
    <div class="dashboard-nav">
        <div class="nav-brand">
            <h2>FitConnect</h2>
        </div>
        <div class="nav-user">
            <span>Complete seu cadastro</span>
        </div>
    </div>
</header>

<div class="dashboard-container">
    <main class="dashboard-main" style="max-width: 600px; margin: 0 auto;">
        <div class="section">
            <div class="section-header">
                <h1>Complete seu Perfil</h1>
                <p>Preencha estas informações para receber treinos personalizados</p>
            </div>

            <% if (error) { %>
                <div class="alert alert-error">
                    <%= error %>
                </div>
            <% } %>

            <form method="POST" action="/client/initial-form">
                <div class="form-group">
                    <label for="age">Idade</label>
                    <input type="number" id="age" name="age" min="16" max="100" required>
                </div>

                <div class="form-group">
                    <label for="gender">Gênero</label>
                    <select id="gender" name="gender" required>
                        <option value="">Selecione</option>
                        <option value="male">Masculino</option>
                        <option value="female">Feminino</option>
                        <option value="other">Outro</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="weight">Peso (kg)</label>
                    <input type="number" id="weight" name="weight" step="0.1" min="30" max="200" required>
                </div>

                <div class="form-group">
                    <label for="height">Altura (cm)</label>
                    <input type="number" id="height" name="height" min="100" max="250" required>
                </div>

                <div class="form-group">
                    <label for="fitness_level">Nível de Condicionamento</label>
                    <select id="fitness_level" name="fitness_level" required>
                        <option value="">Selecione</option>
                        <option value="beginner">Iniciante</option>
                        <option value="intermediate">Intermediário</option>
                        <option value="advanced">Avançado</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="goals">Seus Objetivos</label>
                    <textarea id="goals" name="goals" rows="3" placeholder="Ex: Perder peso, ganhar massa muscular, melhorar condicionamento..." required></textarea>
                </div>

                <div class="form-group">
                    <label for="experience">Experiência Anterior com Exercícios</label>
                    <textarea id="experience" name="experience" rows="3" placeholder="Conte um pouco sobre sua experiência com exercícios..."></textarea>
                </div>

                <div class="form-group">
                    <label for="medical_conditions">Condições Médicas ou Lesões</label>
                    <textarea id="medical_conditions" name="medical_conditions" rows="3" placeholder="Informe se tem alguma condição médica, lesão ou limitação..."></textarea>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Completar Cadastro</button>
            </form>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
